<h1>Carts#index</h1>
<p>Find me in app/views/carts/index.html.erb</p>

<p id="notice"><%= notice %></p>

<h1>Items</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Price</th>
      <th>Image url</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= item.title %></td>
        <td><%= item.description %></td>
        <td><%= item.price %></td>
        <td><%= item.image_url %></td>
        <td><%= link_to 'Show', item %></td>

        <td>
          <%= form_for @order_item, remote: true do |f|%>
          <%= f.hidden_field :product_id, :value => item.id %>
          <%= f.number_field :quantity, :value => 1, :min => 1 %>
          <%= f.submit "Add to card" %>
        </td>



      </tr>
    <% end %>
  </tbody>
</table>

<br>

<div id="card">
  <%= render 'cards/card' %>
</div>
<% end %>